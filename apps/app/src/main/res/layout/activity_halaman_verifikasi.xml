<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.otentikasi.HalamanVerifikasi"
    android:background="@color/myblue">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnverifikasi"
        android:layout_width="276dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/custom_button"
        android:text="VERIFIKASI"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnkirimulangverifikasi"
        android:layout_width="276dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_button"
        android:text="KIRIM ULANG VERIFIKASI"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnverifikasi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnverifikasi"
        app:layout_constraintTop_toBottomOf="@+id/btnverifikasi" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="147dp"
        android:layout_height="132dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="117dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_mark_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/code1"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:inputType="number"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/code4"
        app:layout_constraintEnd_toStartOf="@+id/code2"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/code4" />

    <EditText
        android:id="@+id/code2"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/code3"
        app:layout_constraintEnd_toStartOf="@+id/code3"
        app:layout_constraintStart_toEndOf="@+id/code1"
        app:layout_constraintTop_toTopOf="@+id/code3" />

    <EditText
        android:id="@+id/code3"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/code1"
        app:layout_constraintEnd_toStartOf="@+id/code4"
        app:layout_constraintStart_toEndOf="@+id/code2"
        app:layout_constraintTop_toTopOf="@+id/code1" />

    <EditText
        android:id="@+id/code4"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/code3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="275dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:text="Masuukan Kode Verifikasi"
        android:textAllCaps="true"
        android:textColor="@color/mygreen"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />
</androidx.constraintlayout.widget.ConstraintLayout>