<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HalamanMasuk">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="190dp"
        android:layout_height="127dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/namaapp3"
        android:layout_width="174dp"
        android:layout_height="30dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Berbagi Makanan"
        android:textColor="@color/brown"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/selogan3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="Mari saling berbagi"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/namaapp3"
        app:layout_constraintStart_toStartOf="@+id/namaapp3"
        app:layout_constraintTop_toBottomOf="@+id/namaapp3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="257dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Masuk"
        android:textColor="@color/brown"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selogan3" />

    <TextView
        android:id="@+id/selogan4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="105dp"
        android:fontFamily="@font/poppins_light"
        android:text="Masukkan no hp dan kata sandi anda"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/inputnohp"
        android:layout_width="298dp"
        android:layout_height="52dp"
        android:background="@drawable/input_text"
        android:drawableStart="@drawable/ic_nohp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawablePadding="12dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:hint="No hp"
        android:text="+62"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selogan4" />

    <EditText
        android:id="@+id/inputkatasandi"
        android:layout_width="298dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_text"
        android:drawableStart="@drawable/ic_katasandi"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Kata Sandi"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/inputnohp"
        app:layout_constraintStart_toStartOf="@+id/inputnohp"
        app:layout_constraintTop_toBottomOf="@+id/inputnohp" />

    <TextView
        android:id="@+id/txtlupakatasandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Lupa kata sandi?"
        android:textColor="@color/brown"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/inputkatasandi"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/inputkatasandi"
        app:layout_constraintTop_toBottomOf="@+id/inputkatasandi" />

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/btnmasukapp"
        android:layout_width="298dp"
        android:layout_height="49dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_oren"
        android:fontFamily="@font/poppins_bold"
        android:text="Masuk"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/inputkatasandi"
        app:layout_constraintStart_toStartOf="@+id/inputkatasandi"
        app:layout_constraintTop_toBottomOf="@+id/inputkatasandi" />

    <TextView
        android:id="@+id/txtbelumpunyaakun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Belum punya akun?"
        android:textColor="@color/brown"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/inputkatasandi"
        app:layout_constraintTop_toBottomOf="@+id/btnmasukapp" />

    <TextView
        android:id="@+id/linkdaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/poppins_bold"
        android:text="daftar sekarang"
        android:textColor="@color/orange"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtbelumpunyaakun"
        app:layout_constraintTop_toTopOf="@+id/txtbelumpunyaakun" />


</androidx.constraintlayout.widget.ConstraintLayout>