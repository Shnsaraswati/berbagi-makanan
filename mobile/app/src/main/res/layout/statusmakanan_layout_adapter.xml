<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraintLayout"
    android:background="@drawable/border"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp">

    <TextView
        android:id="@+id/txtnamamakanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Nama Makanan"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fotomakanan_upload"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/txtnamamakanan"
        app:layout_constraintTop_toBottomOf="@+id/txtnamamakanan"
        app:srcCompat="@drawable/ic_fotomakanan_menu" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnhapus"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/button_oren"
        android:fontFamily="@font/poppins_bold"
        android:text="Hapus"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fotomakanan_upload"
        app:layout_constraintStart_toEndOf="@+id/fotomakanan_upload"
        app:layout_constraintTop_toBottomOf="@+id/txtnamamakanan" />

</androidx.constraintlayout.widget.ConstraintLayout>