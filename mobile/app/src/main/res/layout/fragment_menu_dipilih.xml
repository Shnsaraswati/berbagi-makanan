<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.FragmentMenuDipilih"
    >


    <TextView
        android:id="@+id/txtnamaakun_menudipilih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Nama Akun"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtnamamakanan_menudipilih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Nama Makanan"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgmakanandipilih" />

    <TextView
        android:id="@+id/txtxdeskripsimakanan_menudipilih"
        android:layout_width="286dp"
        android:layout_height="142dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:fontFamily="@font/poppins_light"
        android:paddingStart="15dp"
        android:text="Deskripsi Makanan"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/imgmakanandipilih"
        app:layout_constraintStart_toStartOf="@+id/imgmakanandipilih"
        app:layout_constraintTop_toBottomOf="@+id/txtnamamakanan_menudipilih" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_location"
        app:layout_constraintStart_toStartOf="@+id/txtxdeskripsimakanan_menudipilih"
        app:layout_constraintTop_toBottomOf="@+id/txtxdeskripsimakanan_menudipilih" />

    <TextView
        android:id="@+id/txtlokasimakanan_menudipilih"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_light"
        android:text="Lokasi Makanan"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_eye"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <TextView
        android:id="@+id/txtdilihat_menudipilih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="12"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnlihatlokasi_makanan"
        android:layout_width="131dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_garisoren"
        android:fontFamily="@font/poppins_bold"
        android:text="Lihat Lokasi"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/txtdilihat_menudipilih" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnmintamakanan"
        android:layout_width="131dp"
        android:layout_height="49dp"
        android:background="@drawable/button_oren"
        android:fontFamily="@font/poppins_bold"
        android:text="Minta"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnlihatlokasi_makanan"
        app:layout_constraintEnd_toEndOf="@+id/txtxdeskripsimakanan_menudipilih"
        app:layout_constraintStart_toEndOf="@+id/btnlihatlokasi_makanan"
        app:layout_constraintTop_toTopOf="@+id/btnlihatlokasi_makanan" />

    <ImageView
        android:id="@+id/imgmakanandipilih"
        android:layout_width="131dp"
        android:layout_height="119dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_fotomakanan_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>