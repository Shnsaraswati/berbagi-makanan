<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraintLayout"
    android:background="@drawable/border"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp">

    <TextView
        android:id="@+id/txtnamapemberishimmer"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="#B3B3B3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fotomakanan_menushimmer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="#B3B3B3"
        app:layout_constraintStart_toStartOf="@+id/txtnamapemberishimmer"
        app:layout_constraintTop_toBottomOf="@+id/txtnamapemberishimmer"
         />

    <TextView
        android:id="@+id/txtnamamakanan_menushimmer"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins_medium"
        android:background="#B3B3B3"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/fotomakanan_menushimmer"
        app:layout_constraintTop_toTopOf="@+id/fotomakanan_menushimmer" />

    <ImageView
        android:id="@+id/imageView9shimmer"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:background="#B3B3B3"
        app:layout_constraintStart_toStartOf="@+id/txtnamamakanan_menushimmer"
        app:layout_constraintTop_toBottomOf="@+id/txtnamamakanan_menushimmer"
        />

    <ImageView
        android:id="@+id/imageView10shimmer"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:background="#B3B3B3"
        app:layout_constraintStart_toStartOf="@+id/imageView9shimmer"
        app:layout_constraintTop_toBottomOf="@+id/imageView9shimmer" />

    <TextView
        android:id="@+id/txtlinklokasimakananshimmer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="#B3B3B3"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView9shimmer"
        app:layout_constraintTop_toTopOf="@+id/imageView9shimmer" />

    <TextView
        android:id="@+id/txtdilihatshimmer"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins_medium"
        android:background="#B3B3B3"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10shimmer"
        app:layout_constraintStart_toEndOf="@+id/imageView10shimmer"
        app:layout_constraintTop_toTopOf="@+id/imageView10shimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>