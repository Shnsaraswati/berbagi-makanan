<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraintLayoutNotif"
    android:background="@drawable/border"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp">

    <ImageView
        android:id="@+id/imgakun_notif"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_fotoprofil" />

    <TextView
        android:id="@+id/txtnamaakun_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Nama Akun "
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/imgakun_notif"
        app:layout_constraintTop_toTopOf="@+id/imgakun_notif" />

    <TextView
        android:id="@+id/txtketerangan_notif"
        android:layout_width="213dp"
        android:layout_height="81dp"
        android:fontFamily="@font/poppins_light"
        android:text="Keterangan"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/txtnamaakun_notif"
        app:layout_constraintTop_toBottomOf="@+id/txtnamaakun_notif" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btndtolak"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_garisoren"
        android:fontFamily="@font/poppins_bold"
        android:text="Tolak"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@+id/txtketerangan_notif"
        app:layout_constraintTop_toBottomOf="@+id/txtketerangan_notif" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnterima"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/button_oren"
        android:fontFamily="@font/poppins_bold"
        android:text="Terima"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/btndtolak"
        app:layout_constraintEnd_toEndOf="@+id/txtketerangan_notif"
        app:layout_constraintStart_toEndOf="@+id/btndtolak"
        app:layout_constraintTop_toTopOf="@+id/btndtolak" />
</androidx.constraintlayout.widget.ConstraintLayout>