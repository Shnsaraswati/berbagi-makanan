<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shnsaraswati.berbagimmakanan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BerbagiMmakanan">
        <activity android:name=".view.HalamanPanduan"></activity>
        <activity android:name=".view.HalamanAturUlangKataSandi" />
        <activity android:name=".view.HalamanVerifikasi" />
        <activity android:name=".view.HalamanLupaKataSandi" />
